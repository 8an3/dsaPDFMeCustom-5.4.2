{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es5",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "typeRoots": ["src/types/", "node_modules/@types"],
    "sourceMap": true
  },
  "baseUrl": ".",
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/types/index.d.ts"],
  "exclude": ["node_modules"]
}
