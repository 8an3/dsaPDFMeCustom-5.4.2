{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es5",
    "jsx": "react",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types"],
    "sourceMap": true
  },
  "baseUrl": ".",
  "include": [
    "declaration.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
