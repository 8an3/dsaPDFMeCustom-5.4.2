{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es5",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "sourceMap": true
  },
  "baseUrl": ".",
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
